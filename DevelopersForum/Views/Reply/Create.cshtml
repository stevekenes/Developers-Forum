@model  DevelopersForum.ViewModels.PostReplyModel

<div class="container body-Content">
    <div class="row sectionHeader">
        <div class="sectionHeading col-md-12">
            Reply | @Model.PostTitle
        </div>
        <div class="forumLogo" style="background-image: url(@Model.ForumImageUrl)"></div>
        <span id="headingBtn">
            <a asp-controller="Post" asp-action="Index" 
               asp-route-id="@Model.PostId" class="btn btn-secondary">
                Back to Post
             </a>
        </span>
    </div>
    <div class="row" style="background-color: white; padding-left: 16px;">
        <div id="postReply">
            <h3>
                @Model.PostTitle
            </h3>
            <p>
                @Model.PostContent
            </p>
        </div>
    </div>
    <div class="row" style="display: table;background-color: #fff;border-bottom: 1px solid #aaa; width:1110px;">
        <div class="createPostSection">
            <div class="authorBlock" >
                You're submitting this Reply as <strong>@Model.AuthorName</strong>
            </div>

            <form asp-action="AddReply" method="post" id="addPostForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ReplyContent"><strong>Reply</strong></label>
                    <textarea asp-for="ReplyContent" rows="10" 
                              class="form-control" style="width:1050px" placeholder="Your reply..."></textarea>
                    <span asp-validation-for="ReplyContent" class="text-danger"></span>
                </div>
                <button type="submit" id="submitReplyBtn" class="btn btn-submitPost">Submit Reply</button>
                <input asp-for="AuthorId" type="hidden" />
                <input asp-for="PostId" type="hidden" />
                <input asp-for="ForumId" type="hidden" />
            </form>
        </div>
    </div>
</div>
